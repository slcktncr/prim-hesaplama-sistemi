{
  "name": "prim-hesaplama-sistemi",
  "version": "1.0.0",
  "description": "Satış temsilcileri için prim hesaplama ve yönetim sistemi",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm install && npm run build",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm run build && npm run fix:contract-index",
    "render-postbuild": "cd client && npm install && npm run build && npm run fix:contract-index",
    "migrate:payment-methods": "node scripts/migratePaymentMethods.js",
    "fix:contract-index": "node scripts/fixContractNoIndex.js",
    "list:users": "node scripts/listActiveUsers.js",
    "backup:manager": "node scripts/backupManager.js",
    "create:test-backup": "node scripts/createTestBackup.js",
    "fix:prim-periods": "node scripts/fixPrimPeriodBySaleDate.js",
    "create:default-roles": "node scripts/createDefaultRoles.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.13.0",
    "pdfkit-table": "^0.1.99",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": "20.x"
  }
}
