    "migrate:payment-methods": "node scripts/migratePaymentMethods.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "moment": "^2.29.4",
    "xlsx": "^0.18.5",
    "pdfkit": "^0.13.0",
    "pdfkit-table": "^0.1.99"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": "20.x"
  }
}
