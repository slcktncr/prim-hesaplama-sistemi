{
  "name": "prim-hesaplama-sistemi",
  "version": "1.0.0",
  "description": "Satış temsilcileri için prim hesaplama ve yönetim sistemi",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
